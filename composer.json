{
    "name": "lukaj/uniloc",
    "description": "Framework independent PHP localizaiton layer",
    "require": {
        "php": ">= 5.3.0",
        "nette/caching": "@dev"
    },
    "suggest": {
        "ext-intl": "*"
    },
    "require-dev": {
        "ext-intl": "*",
        "phpunit/phpunit": "@dev",
        "nette/neon": "@dev"
    },
    "autoload": {
        "psr-4": {"Lukaj\\Uniloc\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"Lukaj\\Uniloc\\Test\\": "tests/unit"}
    }
}
